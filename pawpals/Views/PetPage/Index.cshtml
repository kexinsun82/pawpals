@model IEnumerable<pawpals.Models.DTOs.PetDTO>

@{
    ViewData["Title"] = "Pets";
}

<div class="container">
    <h1>Pets</h1>

    <!-- Add New Pet Button -->
    <a asp-controller="Pet" asp-action="PostPet" class="btn btn-primary mb-3">Add New Pet</a>

    <!-- Pet List -->
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Pet List</h5>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Breed</th>
                        <th>Date of Birth</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pet in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => pet.Name)</td>
                            <td>@Html.DisplayFor(modelItem => pet.Type)</td>
                            <td>@Html.DisplayFor(modelItem => pet.Breed)</td>
                            <td>@pet.DOB.ToString("MM/dd/yyyy")</td>
                            <td>
                                <a asp-controller="Pet" asp-action="GetPet" asp-route-id="@pet.PetId" class="btn btn-info btn-sm">Details</a>
                                <a asp-controller="Pet" asp-action="PutPet" asp-route-id="@pet.PetId" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-controller="Pet" asp-action="DeletePet" asp-route-id="@pet.PetId" class="btn btn-danger btn-sm"
                                   onclick="return confirm('Are you sure you want to delete this pet?');">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>