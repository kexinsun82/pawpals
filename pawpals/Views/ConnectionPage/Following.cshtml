@model List<pawpals.Models.DTOs.BasicMemberDTO>

<h2>Following</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Member ID</th>
            <th>Member Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var following in Model)
        {
            <tr>
                <td>@following.MemberId</td>
                <td>@following.MemberName</td>
                <td>
                    <form asp-action="Unfollow" method="post">
                        <input type="hidden" name="memberId" value="@ViewBag.MemberId" />
                        <input type="hidden" name="followingId" value="@following.MemberId" />
                        <button type="submit" class="btn btn-danger">Unfollow</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Back Button -->
<div>
    <a asp-controller="ConnectionPage" asp-action="Index" class="btn btn-secondary">Back to Connection Page</a>
</div>